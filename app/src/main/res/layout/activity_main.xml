<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash_screen"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="4.5">
        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/app_logo_png"
            android:layout_width="250dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="3.5" >
        <TextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Welcome to"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="SMART APP"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#39DDDDDD"/>
        <TextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="BY BANK ASIA"
            android:textColor="#ddd"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2">
        <androidx.core.widget.ContentLoadingProgressBar
            android:theme="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/prgressbar_id"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/custom_progress_bar_horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    </LinearLayout>

</LinearLayout>